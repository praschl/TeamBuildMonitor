<Window x:Class="MiP.TeamBuilds.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Background="GhostWhite"
        Width="800"
        Height="600"
        Title="Team Builds Manager"
        Icon="../../assets/Bob.ico"
        Initialized="Window_Initialized"
        >
    <Window.Resources>
        <ContextMenu x:Key="TaskBarMenu">
            <MenuItem Header="Settings" Click="Settings_Click" />
            <Separator/>
            <MenuItem Header="Quit" Click="Quit_Click" />
        </ContextMenu>        
    </Window.Resources>

    <Grid>
        <tb:TaskbarIcon IconSource="../../assets/Bob.ico" ContextMenu="{StaticResource TaskBarMenu}" />
    </Grid>
</Window>
