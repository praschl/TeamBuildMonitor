<Window x:Class="MiP.TeamBuilds.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiP.TeamBuilds"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="Tfs Build Manager Settings" 
        Width="400"
        Height="300" 
        Background="#EEEEEE"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closed="Window_Closed"
        >

    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="3">

            <Label DockPanel.Dock="Left" Content="Tfs Url:"/>
            <TextBox Text="{Binding TfsUrl}" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            
        </DockPanel>
        
        <Border />
    </DockPanel>
</Window>
